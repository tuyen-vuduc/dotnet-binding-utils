<Project Sdk="Microsoft.NET.Sdk">
	<Import Condition="EXISTS('Build.props')" Project="Build.props" />
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <RunWorkingDirectory>$(MSBuildProjectDirectory)</RunWorkingDirectory>
    <IsPackable>false</IsPackable>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <AndroidMinSdkVersion>26</AndroidMinSdkVersion>
  </PropertyGroup>
  <PropertyGroup>
    <AndroidSdkDirectory Condition=" '$(OS)' == 'Unix' ">$(Home)/Library/Android/sdk</AndroidSdkDirectory>
    <AndroidSdkDirectory Condition=" '$(OS)' != 'Unix' ">$(UserProfile)/Library/Android/sdk</AndroidSdkDirectory>
  </PropertyGroup>  
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Cake.Frosting" Version="3.0.0" />
    <PackageReference Include="Dependencies.Gradle" Version="7.6.0.3" />
  </ItemGroup>
  <ItemGroup>
    <GradleImplementation Include="com.intellimec.mobile.android:distracteddriving:3.11.0"></GradleImplementation>
    <GradleImplementation Include="com.intellimec.mobile.android:tripdetectionumbrella:1.16.0"></GradleImplementation>
    <GradleImplementation Include="com.drivesync.android:devices-wedge:1.16.0"></GradleImplementation>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\src\Binderator.Gradle\Binderator.Gradle.csproj" />
    <ProjectReference Include="..\..\..\src\DotnetBindings.Cake\DotnetBindings.Cake.csproj" />
  </ItemGroup>
  <Target Name="_GradleDependencyResolverTrigger" DependsOnTargets="_GradleSync" BeforeTargets="CoreCompile" />
</Project>